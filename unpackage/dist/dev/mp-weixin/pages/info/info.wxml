<view class="info" style="{{(bgStyle)}}">
  <view class="bg"></view>
  <view class="content">
    <view class="top">
      <view class="name">{{audioList[audioPlaySrc].name}}</view>
      <view class="author">{{audioList[audioPlaySrc].author}}</view>
      <view class="bar">
        <view>标准</view>
        <view>音效</view>
        <view>视频</view>
      </view>
    </view>
    <view class="micImg">
      <image class="{{[playState?'album_rotate':'']}}" src="{{audioList[audioPlaySrc].img}}"></image>
    </view>
    <view class="bot">
      <view class="lineBar">
        <view class="time star">{{nowmiaoForc}}</view>
        <slider class="line" value="{{nowmiao}}" min="0" max="{{allmiao}}" block-size="15" activeColor="#55A532" data-event-opts="{{[['change',[['sliderChange',['$event']]]]]}}" bindchange="__e"></slider>
        <view class="time end">{{allmiaoForc}}</view>
      </view>
      <view class="btn">
        <view data-event-opts="{{[['tap',[['audioWayFunc',['$event']]]]]}}" bindtap="__e">
          <block wx:if="{{audioWay==0}}">
            <image class="iconbtn" src="../../static/image/icons/recircle_play.png"></image>
          </block>
          <block wx:if="{{audioWay==2}}">
            <image class="iconbtn" src="../../static/image/icons/single_loop.png"></image>
          </block>
          <block wx:if="{{audioWay==1}}">
            <image class="iconbtn" src="../../static/image/icons/random_play.png"></image>
          </block>
        </view>
        <view class="palybtn">
          <view data-event-opts="{{[['tap',[['upPlay',['$event']]]]]}}" bindtap="__e">
            <image class="iconbtn" src="../../static/image/icons/last_music.png"></image>
          </view>
          <view data-event-opts="{{[['tap',[['play',['$event']]]]]}}" bindtap="__e">
            <block wx:if="{{!playState}}">
              <image class="iconbtn play" src="../../static/image/icons/start_blank.png"></image>
            </block>
            <block wx:if="{{playState}}">
              <image class="iconbtn play" src="../../static/image/icons/pause_2.png"></image>
            </block>
          </view>
          <view data-event-opts="{{[['tap',[['nextPlay',['$event']]]]]}}" bindtap="__e">
            <image class="iconbtn" src="../../static/image/icons/next_music.png"></image>
          </view>
        </view>
        <view>
          <image class="iconbtn" src="../../static/image/icons/music_list.png"></image>
        </view>
      </view>
      <view class="tool">
        <view data-event-opts="{{[['tap',[['collectFunc',['$event']]]]]}}" bindtap="__e">
          <block wx:if="{{!collect}}">
            <image class="iconbtn" src="../../static/image/icons/collect_blank.png"></image>
          </block>
          <block wx:if="{{collect}}">
            <image class="iconbtn" src="../../static/image/icons/collect_color.png"></image>
          </block>
        </view>
        <view>
          <image class="iconbtn" src="../../static/image/icons/download_blank.png"></image>
        </view>
        <view>
          <image class="iconbtn" src="../../static/image/icons/share.png"></image>
        </view>
        <view>
          <image class="iconbtn" src="../../static/image/icons/user_message.png"></image>
        </view>
      </view>
    </view>
  </view>
</view>